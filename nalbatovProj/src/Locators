#LoginPage

Login.input.UserName = //input[@name='username']

Login.input.password = //input[@name='password']

Login.button.SignIn = //button[contains(text(), 'Sign In')]



#HomePage

HomePage.button.MyProfile = //img[@alt='My profile'] or //a[@href='/profile/maveris1995']

HomePage.button.CreatePost = //a[@href="/create-post"]

HomePage.button.SignOut = //button[contains(@class, 'btn-secondary') and text()='Sign Out']

HomePage.button.Search = //a[contains(@class, 'text-white') and contains(@class, 'header-search-icon')]

HomePage.button.Chat = //span[contains(@class, 'header-chat-icon')]

HomePage.input.Chat = //input[@class='chat-field']



#CreatePost page

CreatePost.Input.Title = //input[@name='title']

CreatePost.Input.BodyContent = //textarea[@name='body']

CreatePost.Button.SaveNewPost = //button[text()='Save New Post']

CreatePost.Button.Search = //a[@data-original-title='Search']

CreatePost.Input.SearchPost = //input[@type='text' and @id='live-search-field']




